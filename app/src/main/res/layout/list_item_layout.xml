<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dimen_5"
    android:layout_marginRight="@dimen/dimen_5"
    android:layout_marginTop="@dimen/dimen_3"
    android:focusableInTouchMode="true"
    app:cardCornerRadius="@dimen/dimen_0"
    app:cardUseCompatPadding="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_2"
        android:background="@color/listitem_background">

        <TextView
            android:id="@+id/item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_marginTop="@dimen/dimen_15"
            android:singleLine="true"
            android:textColor="@color/listitem_title_text"
            android:textSize="@dimen/dimen_20"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/second_row_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_title">

            <TextView
                android:id="@+id/item_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_marginTop="@dimen/dimen_10"
                android:layout_toLeftOf="@+id/item_imgURL"
                android:textColor="@android:color/black"
                android:textSize="@dimen/dimen_12" />

            <ImageView
                android:id="@+id/item_imgURL"
                android:layout_width="@dimen/dimen_120"
                android:layout_height="@dimen/dimen_80"
                android:contentDescription="@string/description"
                android:elevation="4dp"
                android:scaleType="fitCenter"
                android:src="@drawable/no_image"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>
